# Variables de entorno para Vercel
# Copia estas variables en el panel de Vercel: Settings > Environment Variables

# Node Environment
NODE_ENV=production

# Puerto (Vercel lo asigna automáticamente)
PORT=3000

# Supabase Configuration
SUPABASE_URL=tu_supabase_url_aqui
SUPABASE_ANON_KEY=tu_supabase_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_supabase_service_role_key_aqui

# Frontend URL (actualiza con tu URL de frontend en Vercel)
FRONTEND_URL=https://tu-frontend.vercel.app

# JWT Secret (genera uno aleatorio seguro)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Database
DATABASE_URL=tu_database_url_si_aplica

# Configuración de CORS (opcional)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://tu-frontend.vercel.app
